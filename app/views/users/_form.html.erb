<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="alert alert-danger alert-dismissible fade show" role="alert">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= form.label :fullname %>
    <%= form.text_field :fullname, class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= form.label :male do %> <%=t("general.sex.gender") %> <%end%>
    <%= form.select :male, [[t("general.sex.male"), true], [t("general.sex.female"), false]], {}, {class: "form-control", disabled: true } %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :allow_alliance, class: "form-check-input" %>
    <%= form.label :allow_alliance, class: "form-check-label" %>
    <p class="note"> By enabling you allow to see all the information inside this form to all the people using the alliance module.</p>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :allow_room_switch, class: "form-check-input" %>
    <%= form.label :allow_room_switch, class: "form-check-label" %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :move_with_alliance, class: "form-check-input" %>
    <%= form.label :move_with_alliance, class: "form-check-label" %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :same_sex_room, class: "form-check-input" %>
    <%= form.label :same_sex_room, class: "form-check-label" %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :same_sex_cell, class: "form-check-input" %>
    <%= form.label :same_sex_cell, class: "form-check-label" %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :allow_share_info, class: "form-check-input" %>
    <%= form.label :allow_share_info, class: "form-check-label" %>
  </div>

  <div class="form-group">
    <%= form.label :note %>
    <%= form.text_area :note, class: "form-control" %>
  </div>

  <div class="actions">
    <%= link_to 'Back', users_path, class: "btn btn-outline-secondary"  if current_user.admin %>
    <%= form.submit t("general.save"), class: "btn btn-primary" %>

  </div>
<% end %>
