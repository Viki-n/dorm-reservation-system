<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">Select place</div>
        <div class="card-body">
          <div>
            Building: 
            <% for building in @buildings do %>
              <%= link_to building, 
                  @params.merge(building: building), 
                  class: "btn btn#{'-outline' unless @params[:building] == building}-info"
              %>
            <% end %>
          </div>
          <% if @params[:building] %>
            <div>
              Floor: 
              <% for floor in @floors do %>
                <%= link_to floor, 
                    @params.merge(floor: floor), 
                    class: "btn btn#{'-outline' unless @params[:floor].to_i == floor}-info"
                %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h1>Places</h1>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Building</th>
              <th>Floor</th>
              <th>Cell</th>
              <th>Room</th>
              <th>Bed</th>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @places.each do |place| %>
              <tr>
                <td><%= place.building %></td>
                <td><%= place.floor %></td>
                <td><%= place.cell %></td>
                <td><%= place.building + place.floor.to_s + place.room %></td>
                <td><%= place.bed %></td>
                <td><%= place.user %></td>
                <td><%= link_to 'Show', place %></td>
                <td><%= link_to 'Edit', edit_place_path(place) %></td>
                <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
