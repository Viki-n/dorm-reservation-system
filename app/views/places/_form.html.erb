<%= form_with(model: place, local: true) do |form| %>

  <%= render "shared/errors", object: place %>

  <div class="form-group">
    <%= form.label :room_type %>
    <%= form.text_field :room_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label t("reservation.guest") %>
    <%= form.text_field :user_id, class: "form-control" %>
  </div>

  <div class="actions">
    <%= link_to 'Back', :back, class: "btn btn-outline-secondary" %>
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
