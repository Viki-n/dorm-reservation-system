<%= form_with(model: switch_room, local: true) do |form| %>
  <%= render "shared/errors", object: switch_room %>


  <div class="form-group">
    <%= hidden_field_tag :place_id, @place.id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :note %>
    <%= form.text_area :note, class: "form-control" %>
    <p class="note">recommend change some contact information for communication</p>
  </div>

  <div class="actions">
    <%= link_to t("general.cancel"), :back, class: "btn btn-outline-secondary" %>  
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
